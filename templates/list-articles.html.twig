{% extends 'base.html.twig' %}

{% block main %}

	<h1>Liste des articles</h1>

	<section class="articles-list-container">
	
		{% for article in articles %}

			<article class="article">
				<p>{{ article.title }}</p>
				<img class="article-image" src="{{ article.image }}" alt="{{ article.title }}" />
				<a href="{{ path('details-article', {'id' : article.id}) }}">Voir l'article</a>
				<a href="{{ path('delete-article', {'id' : article.id}) }}">Supprimer l'article</a>
			</article>

		{% endfor %}

	</section>

{% endblock main %}